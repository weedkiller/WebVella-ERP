@addTagHelper *, WebVella.Erp.Plugins.Core
@addTagHelper *, WebVella.Erp.Web
@addTagHelper *, WebVella.TagHelpers
@using WebVella.Erp.Web.Utils;
@using WebVella.Erp.Web;
@using WebVella.Erp.Web.Models;
@using WebVella.Erp.Plugins.Project.Components;
@{
	var options = (PcReportAccountMonthlyTimelogs.PcReportAccountMonthlyTimelogsOptions)ViewBag.Options;
	var node = (PageBodyNode)ViewBag.Node;
	var erpRequest = (ErpRequestContext)ViewBag.RequestContext;
}
<wv-row>
	<wv-column span="4">
		<wv-field-datasource name="year" value="@options.Year" label-text="Year" page-id="erpRequest.Page.Id"></wv-field-datasource>
	</wv-column>
	<wv-column span="4">
		<wv-field-datasource name="month" value="@options.Month" label-text="Month" page-id="erpRequest.Page.Id"></wv-field-datasource>
	</wv-column>
	<wv-column span="4">
		<wv-field-datasource name="account_id" value="@options.AccountId" label-text="Account" page-id="erpRequest.Page.Id"></wv-field-datasource>
	</wv-column>
</wv-row>
