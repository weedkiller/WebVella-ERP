@addTagHelper *, WebVella.Erp.Plugins.Core
@addTagHelper *, WebVella.Erp.Web
@addTagHelper *, WebVella.TagHelpers
@using WebVella.Erp.Web.Utils;
@using WebVella.Erp.Web.Components;
@using WebVella.Erp.Web.Models;
@{
	var options = (PcButton.PcButtonOptions)ViewBag.Options;
	var node = (PageBodyNode)ViewBag.Node;
	var href = (string)ViewBag.ProcessedHref;
}
<wv-button type="@options.Type" is-outline="@options.isOutline" is-block="@options.isBlock"
	is-active="@options.isActive" is-disabled="@options.isDisabled" color="@options.Color" size="@options.Size"
	class="@options.Class" id="@options.Id" text="@options.Text" onclick="@options.OnClick" href="@href"
	new-tab="@options.NewTab" icon-class="@options.IconClass" form="@options.Form" is-visible="(bool)ViewBag.IsVisible" icon-right="@options.IconRight">
</wv-button>