
@addTagHelper *, WebVella.TagHelpers
@using WebVella.Erp.Web.Utils;
@using WebVella.Erp.Web.Components;
@using WebVella.Erp.Web.Models;
@{
	var options = (PcRepeater.PcRepeaterOptions)ViewBag.Options;
	var node = (PageBodyNode)ViewBag.Node;
}
<div class="p-1">
	@if (options.HasHeader)
	{
		<wv-pb-node-container parent-node-id="@node.Id" container-id="header"></wv-pb-node-container>
	}

	<wv-pb-node-container parent-node-id="@node.Id" container-id="body"></wv-pb-node-container>

	@if (options.HasFooter)
	{
		<wv-pb-node-container parent-node-id="@node.Id" container-id="footer"></wv-pb-node-container>
	}

</div>