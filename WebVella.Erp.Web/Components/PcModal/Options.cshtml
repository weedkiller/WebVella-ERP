@addTagHelper *, WebVella.Erp.Plugins.Core
@addTagHelper *, WebVella.Erp.Web
@addTagHelper *, WebVella.TagHelpers
@using WebVella.Erp.Web.Utils;
@using WebVella.Erp.Web.Components;
@using WebVella.Erp.Api.Models;
@using WebVella.TagHelpers.Models;
@using WebVella.Erp.Web;
@{
	var options = (PcModal.PcModalOptions)ViewBag.Options;
	var erpRequest = (ErpRequestContext)ViewBag.RequestContext;
	var positionOptions = (List<WvSelectOption>)ViewBag.PositionOptions;
	var sizeOptions = (List<WvSelectOption>)ViewBag.SizeOptions;
}

<wv-row>
	<wv-column span="4">
		<wv-field-datasource name="is_visible" label-text="Is Rendered" value="@options.IsVisible" page-id="erpRequest.Page.Id" placeholder="true"></wv-field-datasource>
	</wv-column>
	<wv-column span="4">
		<wv-field-datasource name="title" label-text="Title" value="@options.Title" page-id="erpRequest.Page.Id"></wv-field-datasource>
	</wv-column>
	<wv-column span="4">
		<wv-field-text name="backdrop" label-text="Backdrop mode" value="@options.Backdrop" placeholder="true"></wv-field-text>
	</wv-column>
</wv-row>
<wv-row>
	<wv-column span="4">
		<wv-field-text name="id" value="@options.Id" label-text="Id"></wv-field-text>
	</wv-column>
	<wv-column span="4">
		<wv-field-select name="size" label-text="Size" value="@options.Size" options="sizeOptions" required="true"></wv-field-select>
	</wv-column>
	<wv-column span="4">
		<wv-field-select name="position" label-text="Position" value="@options.Position" options="positionOptions" required="true"></wv-field-select>
	</wv-column>
</wv-row>
